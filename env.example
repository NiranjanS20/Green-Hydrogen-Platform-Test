# Green Hydrogen Platform - Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =============================================
# SUPABASE CONFIGURATION (Required)
# =============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=hydrogen-data

# Server-side Supabase key (for admin operations)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================
# AUTHENTICATION (Optional)
# =============================================
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000

# =============================================
# EMAIL CONFIGURATION (Optional)
# =============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@greenhydrogenplatform.com

# =============================================
# NOTIFICATION SERVICES (Optional)
# =============================================
# Twilio for SMS notifications
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Push notification service
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# =============================================
# EXTERNAL APIS (Optional)
# =============================================
# Weather API for renewable energy calculations
OPENWEATHER_API_KEY=your-openweather-api-key

# Google Maps for location services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# =============================================
# MONITORING & ANALYTICS (Optional)
# =============================================
# Sentry for error tracking
SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project

# Google Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# =============================================
# DEVELOPMENT & DEBUGGING (Optional)
# =============================================
# Enable debug logging
DEBUG=false

# Bundle analyzer
ANALYZE=false

# Demo mode settings
DEMO_MODE_ENABLED=false
DEMO_RESET_INTERVAL_HOURS=24

# =============================================
# SECURITY (Optional)
# =============================================
# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================
# DEPLOYMENT (Production Only)
# =============================================
# Vercel deployment
VERCEL_TOKEN=your-vercel-token
VERCEL_ORG_ID=your-vercel-org-id
VERCEL_PROJECT_ID=your-vercel-project-id

# Database backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================
# FEATURE FLAGS (Optional)
# =============================================
FEATURE_NOTIFICATIONS=true
FEATURE_DEMO_MODE=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_MULTI_REGION=false
FEATURE_BETA_FEATURES=false

# =============================================
# PERFORMANCE (Optional)
# =============================================
# Next.js optimization
NEXT_TELEMETRY_DISABLED=1

# Memory limits
NODE_OPTIONS=--max-old-space-size=4096

# =============================================
# NOTES
# =============================================
# 1. Never commit .env.local to version control
# 2. Use strong, unique passwords for all services
# 3. Rotate keys regularly in production
# 4. Enable 2FA on all external services
# 5. Monitor usage and costs for paid services
